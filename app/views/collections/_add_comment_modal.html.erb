<div id="add_comment_modal" class="zoom-anim-dialog mfp-hide modal sm_modal">
  <button class="modal__close md_cls" type="button"><i class="fas fa-times"></i></button>
  <h4 class="modal-title share_link_page_h4 share_link_page_h"><%= t('collections.show.add_comment') %></h4>

  <%= form_for @collection.comments.build, url: add_comment_collection_path(@collection), method: :post, id: 'AddCommentForm' do |f| %>
    <div class="placebidbuy_valbox">
      <div class="field">
        <%= f.text_area :description, autofocus: true, class: 'description_comment' %>
      </div>
    </div>
    <div class="modal-footer" style="text-align:center">
      <%= f.submit 'Add comment', class: 'btn bidding-element-btn sign__btn' %>
    </div>
  <% end %>
</div>
</div>
