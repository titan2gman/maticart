<div id="transferTokenForm" class="zoom-anim-dialog mfp-hide modal sm_modal">
  <button class="modal__close md_cls" type="button"><i class="fas fa-times"></i></button>
  <h4 class="modal-title share_link_page_h4"><%= t('collections.show.transfer_token')%></h4>
  <%= form_tag('#', class: 'change-price-form') do %>
    <div class="modal-body">
      <div class="row mb-15">
        <div class="col-md-12">
          <div class="form-group">
            <label for="full_name"><%= t('collections.show.user_wallet_address')%></label>
            <%= text_field_tag "address", nil, class: 'form-control transferAddress sign__input', placeholder: 'Please provide wallet address', required: true %>
            <% if @collection.multiple? %>
              <label for="full_name">No. of Tokens</label>
              <%= text_field_tag "tokens", nil, class: 'form-control transferTokens sign__input validInteger', placeholder: 'Please provide number of tokens'%>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="modal-footer text-center">
      <a class="btn buy-now bidding-element-btn triggerTransfer theme-btn" href="" role="button"><%= t('shared.transfer')%></a>
    </div>
  <% end %>
</div>

<div id="transferToken" class="zoom-anim-dialog mfp-hide modal sm_modal">
  <button class="modal__close md_cls" type="button"><i class="fas fa-times"></i></button>
  <h4 class="modal-title share_link_page_h4"><%= t('shared.follow_steps')%></h4>
  <div class="modal-body">
    <div class="convertEth">
      <%= render partial: 'transferring' %>
    </div>
  </div>
</div>