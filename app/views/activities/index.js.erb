$("#load_more_activities").append("<%=j render 'activities' %>");
<% if @activities.next_page.present? %>
  $("#load_more_activity").attr("href", "<%= activities_path(filters: params[:filters], page_no: @activities.next_page, activity_type: params[:activity_type]) %>");
<% else %>
  $(".load_more_section").remove();
<% end %>
